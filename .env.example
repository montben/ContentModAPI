# =============================================================================
# Muzzle - AI Content Moderation API Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Muzzle
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Security Settings
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://muzzle_user:muzzle_pass@localhost:5432/muzzle_db

# For development, you can use SQLite instead:
# DATABASE_URL=sqlite:///./muzzle.db

# =============================================================================
# Redis Configuration (for Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Machine Learning Model Settings
# =============================================================================
# Path to store trained models
MODEL_ARTIFACTS_PATH=./artifacts

# HuggingFace Model Settings
HUGGINGFACE_CACHE_DIR=./artifacts/huggingface_cache
TEXT_MODEL_NAME=distilbert-base-uncased
NSFW_MODEL_NAME=Falconsai/nsfw_image_detection

# Model Confidence Thresholds
TOXICITY_THRESHOLD=0.7
NSFW_THRESHOLD=0.8

# =============================================================================
# API Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# =============================================================================
# External Services (Optional)
# =============================================================================
# For enhanced image moderation
DEEPAI_API_KEY=your-deepai-api-key-here

# For monitoring and logging
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Development Settings
# =============================================================================
# Set to false in production
ENABLE_DOCS=true
ENABLE_REDOC=true

# CORS Settings (adjust for your frontend domain)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
